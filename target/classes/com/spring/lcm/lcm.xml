<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:c="http://www.springframework.org/schema/c"
xmlns:p="http://www.springframework.org/schema/p"
xmlns:util="http://www.springframework.org/schema/util"
xmlns:jee="http://www.springframework.org/schema/jee"
 xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<!-- This is our bean configuration for setter injection using 'p' schema  -->
	<bean class="com.spring.lcm.Employee" name="employee" c:empName="Hello" init-method="helloInit" destroy-method="helloDestroy"/>
	<bean class="com.spring.lcm.EmployeeInfo" name="employeeInfo" c:empDOJ="25/06/2000"/>

</beans>