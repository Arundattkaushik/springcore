<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xmlns:p="http://www.springframework.org/schema/p"
xmlns:c="http://www.springframework.org/schema/c"
xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

<!-- Enabling Annotations -->
<context:annotation-config/>
	
	<bean class="com.spring.autowire.annotation.Employee" name="employee"/>
	<bean class="com.spring.autowire.annotation.Address" name="address1" p:street="Sector 62" p:city="NOida"/>
	<bean class="com.spring.autowire.annotation.Address" name="address2" p:street="Sector 59" p:city="Delhi"/>
	
</beans>